<script type="application/javascript">
  function calc(ch) {
    if (ch == "=") {
      document.getElementById('calc').value = eval(document.getElementById('calc').value);
    } else if (ch == "C") {
      document.getElementById('calc').value = "";
    } else {
      document.getElementById('calc').value += ch;
    }
  }
</script>

<div class="calculator">
  <input type="text" id="calc" class="calculator-screen" value="" placeholder="0" disabled />
  <div class="calculator-keys">
    <button type="button" class="operator" value="+" onClick="calc('+')">+</button>
    <button type="button" class="operator" value="-" onClick="calc('-')">-</button>
    <button type="button" class="operator" value="*" onClick="calc('*')">&times;</button>
    <button type="button" class="operator" value="/" onClick="calc('/')">&divide;</button>
    <button type="button" value="7" onClick="calc('7')">7</button>
    <button type="button" value="8" onClick="calc('8')">8</button>
    <button type="button" value="9" onClick="calc('9')">9</button>
    <button type="button" value="4" onClick="calc('4')">4</button>
    <button type="button" value="5" onClick="calc('5')">5</button>
    <button type="button" value="6" onClick="calc('6')">6</button>
    <button type="button" value="1" onClick="calc('1')">1</button>
    <button type="button" value="2" onClick="calc('2')">2</button>
    <button type="button" value="3" onClick="calc('3')">3</button>
    <button type="button" value="0" onClick="calc('0')">0</button>
    <button type="button" class="decimal" value=".">.</button>
    <button type="button" class="all-clear" value="all-clear" onClick="calc('C')">AC</button>
    <button type="button" class="equal-sign" value="=" onClick="calc('=')">=</button>
  </div>
</div>

