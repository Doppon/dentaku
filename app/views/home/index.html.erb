<script type="application/javascript">
  function calc(ch) {
    if (ch === "=") {
      // 何も入力されていないとエラーになるのでその対策
      if (document.getElementById('calc').value === "") {
        document.getElementById('calc').value = ""
      } else {
        document.getElementById('calc').value = eval(document.getElementById('calc').value);
      }
    } else if (ch === "C") {
      document.getElementById('calc').value = "";
    } else {
      document.getElementById('calc').value += ch;
    }
  }
</script>

